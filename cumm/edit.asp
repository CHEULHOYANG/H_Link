<script language="javascript">

function go2WriteOk(theform){
	var clmn;
	clmn = theform.title;
	if(clmn.value==""){
		alert("제목을 입력해주세요!");
		clmn.focus();
		return;
	}
	if(clmn.value.replace(/ /g,"")==""){
		alert("제목을 입력해주세요!");
		clmn.select();
		return;
	}
	clmn = theform.writer;
	if(clmn.value==""){
		alert("글쓴이를 입력해주세요!");
		clmn.focus();
		return;
	}
	if(clmn.value.replace(/ /g,"")==""){
		alert("글쓴이를 입력해주세요!");
		clmn.select();
		return;
	}

	clmn = theform.content;
	clmn.value = nicEditors.findEditor('content').getContent();
	if(clmn.value==""  || clmn.value=="<br>") {
	alert("내용을 입력해주세요");
	return;
	}
	
	<% if int(ygbn) = 2 then %>

	clmn = theform.filenm1;
	if(clmn.value){
		if(!clmn.value.match(/\.(gif|jpg|png)$/i)) {
			alert("포토이미지 파일은 이미지파일(*.gif,*.jpg,*.png)만 등록할 수 있습니다!");
			clmn.select();
			return;
		}
	}

	clmn = theform.filenm2;
	 if(clmn.value){
	 	if(!clmn.value.match(/\.(gif|jpg|png)$/i)) {
			alert("썸네일 파일은 이미지파일(*.gif,*.jpg,*.png)만 등록할 수 있습니다!");
			clmn.select();
			return;
		}
	 }
	<% end if %>

	theform.submit();
}
</script>

